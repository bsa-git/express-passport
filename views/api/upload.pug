extends ../layout

block content

    h1.text-center.login-title File Upload
    .signup-wall.box-examples
        .btn-group.btn-group-justified
            a.btn.btn-primary(href='https://github.com/expressjs/multer', target='_blank')
                i.fas.fa-book
                |  Multer Documentation
            a.btn.btn-primary(href='http://codepen.io/search/pens?q=custom+file+upload&limit=all&type=type-pens', target='_blank')
                i.fas.fa-book
                |  Customize File Upload

        h3 File Upload Form
        .row
            .col-sm-6
                p All files will be uploaded to "/uploads" directory.
                form(role='form', enctype='multipart/form-data', method='POST')
                    .form-group
                        label.control-label File Input
                        input(type='file', name='myFile')
                    button.btn.btn-primary(type='submit') Submit
